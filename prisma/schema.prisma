generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
} 

model User {
  id            String   @id @default(uuid()) @map("_id")
  email         String   @unique
  password      String?
  name          String?
  role          String   @default("user") // Roles: "user", "admin"
  sessions      Session[]
  accounts      Account[]
}

model Session {
  id           String   @id @default(uuid()) @map("_id")
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
}

model Account {
  id                String  @id @default(uuid()) @map("_id")
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
}

